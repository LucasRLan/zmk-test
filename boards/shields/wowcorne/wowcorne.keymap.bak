#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/mouse.h>

#define WIN 0
#define MAC 1
#define NAV 2
#define SYM 3
#define NUM 4
#define FN 5
#define CFG 6

#define MSE 7



//universial keycodes
#define LT_ESC &lt NAV ESC
#define LT_SPC &lt MSE SPACE
#define L_NUM &mo NUM
#define L_SYM &mo SYM
#define L_FN  &mo FN
#define L_CFG &mo CFG
#define TAB_C &kp LC(TAB)
#define LT_BSLH &lt FN BSLH

// winos keycodes
#define WHF &mt LCTRL F
#define WHD &mt LALT D
#define WHJ &mt RCTRL J
#define WHK &mt RALT K
#define LANGW &mt RSHFT RALT


// macos keycodes
#define LANGM &mt RSHFT CAPS
#define MHF &mt LGUI F
#define MHD &mt LALT D
#define MHJ &mt RGUI J
#define MHK &mt RALT K
#define OBS &mt LA(LSFT) A
#define OBS_C &mt LC(LA(LSFT)) A


&mt{
  tapping-term-ms = <125>;
  };
&lt{
  tapping-term-ms = <125>;
  };
/ {

        keymap {
                compatible = "zmk,keymap";

                win_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
// | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
// | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
//                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |
                        bindings = <
   &kp TAB   &kp Q &kp W &kp E &kp R &kp T   &kp Y &kp U  &kp I     &kp O   &kp P    &kp BSPC
   LT_ESC    &kp A &kp S &kp D &kp F &kp G   &kp H &kp J  &kp K     &kp L   &kp SEMI &kp SQT
   &kp LSHFT &kp Z &kp X &kp C &kp V &kp B   &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &kp ESC
                  &kp LGUI L_SYM &kp SPACE   &kp RET &mo 2 LANGW
                        >;
                };
                mac_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
// | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
// | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &kp TAB    &kp N1       &kp N2       &kp N3       &kp N4       &kp N5         &kp N6   &kp N7   &kp N8 &kp N9    &kp N0 &kp BSPC
   &bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4   &kp LEFT &kp DOWN &kp UP &kp RIGHT &trans &trans
   &kp LSHFT  &trans       &trans       &trans       &trans       &trans         &trans   &trans   &trans &trans    &trans &trans
                                    &kp LGUI     &trans       &kp SPACE      &kp RET  &trans   &kp RALT
                        >;
                };

                nav_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
// | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
// | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &kp  TAB  &kp EXCL &kp AT &kp HASH &kp DLLR &kp PRCNT   &kp CARET &kp AMPS  &kp KP_MULTIPLY &kp LPAR &kp RPAR &kp BSPC
   &kp LCTRL &trans   &trans &trans   &trans   &trans      &kp MINUS &kp EQUAL &kp LBKT        &kp RBKT &kp BSLH &kp GRAVE
   &kp LSHFT &trans   &trans &trans   &trans   &trans      &kp UNDER &kp PLUS  &kp LBRC        &kp RBRC &kp PIPE &kp TILDE
                             &kp LGUI &trans   &kp SPACE   &kp RET   &trans    &kp RALT
                        >;
                };
                sym_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
// | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
// | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &kp TAB   &kp EXCL &kp AT &kp HASH &kp DLLR &kp PRCNT   &kp CARET        &kp AMPS  &kp LPAR  &kp RPAR &kp KP_MULTIPLY &kp BSPC
   &trans    &trans   &trans &trans   &trans   &trans      &kp KP_MULTIPLY  &kp PLUS  &kp LBKT  &kp RBKT &kp BSLH        &kp KP_EQUAL
   &kp LSHFT &trans   &trans &trans   &trans   &trans      &kp PRCNT        &kp MINUS &kp LBRC  &kp RBRC &kp UNDER       &kp GRAVE
                             &trans   &trans   &trans      &kp RET          L_FN      &trans
                        >;
                };
        };
};
